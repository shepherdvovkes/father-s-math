# Конфигурация PostgreSQL базы данных для Father's MATH
# Копируйте этот файл в .env.local для локальных настроек

# Параметры базы данных
POSTGRES_DB=fathers_math
POSTGRES_USER=fathers_math_user
POSTGRES_PASSWORD=fathers_math_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Параметры подключения для приложения
DATABASE_URL=postgresql://fathers_math_user:fathers_math_password@localhost:5432/fathers_math

# Настройки производительности
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Настройки логирования
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000

# Настройки безопасности
POSTGRES_HOST_AUTH_METHOD=trust
